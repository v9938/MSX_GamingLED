10 ' MSX Gaming Cartridge Test program
20 ' The set value is output to Cartridge Serial.
30 ' Unit tests are compared to stored test values.
40 '
50  _LED_DEBUG(1)
100 OPEN "TEST.CSV"  FOR OUTPUT AS #1
110 FOR I=0 TO 10 STEP 1
115 PRINT I
120 _LEDA_OFF
130 CH=360*RND(1):_LEDC_HUE(CH)
140 CS=100*RND(1):_LEDC_SAT(CS)
150 CV=100*RND(1):_LEDC_VAL(CV)
160 _LED_DRAW
170 CP=INT(10*RND(1)):_LED_POS(CP)
180 PT=INT(4*RND(1)):_LED_PT(PT)
190 PH=360*RND(1):_LEDPT_HUE(PH)
200 PS=100*RND(1):_LEDPT_SAT(PS)
210 PV=100*RND(1):_LEDPT_VAL(PV)
220 PP=INT(10*RND(1)):_LEDPT_REP(PP)
230 PA=100*RND(1):_LEDPT_AVAL(PA)
240 HR=INT(1*RND(1)):AH=360*RND(1):_LEDA_HUE(HR,AH)
250 SR=INT(1*RND(1)):AS=100*RND(1):_LEDA_SAT(SR,AS)
260 VR=INT(1*RND(1)):AV=100*RND(1):_LEDA_VAL(VR,AV)
270 PR=INT(1*RND(1)):AP=100*RND(1):_LEDA_POS(PR,AP)
280 _LED_REAL(I)
290 _LEDA_ON
300 PRINT #1,I,CH,CS,CV,CP,PT,PH,PS,PV,PP,PA,HR,AH,SR,AS,VR,AV,PR,AP
310 FOR X=0 TO 100 STEP 1:NEXT X
320 _LED_OFF
310 FOR X=0 TO 10 STEP 1:NEXT X
320 NEXT I
330 CLOSE #1

