10 ' MSX Gaming Cartridge Test program
20 ' The set value is output to Cartridge Serial.
30 ' Unit tests are compared to stored test values.
40 '
50  _LED_DEBUG(1)
100 OPEN "TEST.CSV"  FOR OUTPUT AS #1
110 FOR I=0 TO 30 STEP 1
120 PRINT I
130 _LEDA_OFF
140 CH=360*RND(1):_LEDC_HUE(CH)
150 CS=100*RND(1):_LEDC_SAT(CS)
160 CV=100*RND(1):_LEDC_VAL(CV)
170 _LED_DRAW
180 CP=INT(10*RND(1)):_LED_POS(CP)
190 PT=INT(4*RND(1)):_LED_PT(PT)
200 PH=360*RND(1):_LEDPT_HUE(PH)
210 PS=100*RND(1):_LEDPT_SAT(PS)
220 PV=100*RND(1):_LEDPT_VAL(PV)
230 PP=INT(10*RND(1)):_LEDPT_REP(PP)
240 PA=100*RND(1):_LEDPT_AVAL(PA)
250 HR=INT(1*RND(1)+.4):AH=360*RND(1):_LEDA_HUE(HR,AH)
260 SR=INT(1*RND(1)+.4):AS=100*RND(1):_LEDA_SAT(SR,AS)
270 VR=INT(1*RND(1)+.4):AV=100*RND(1):_LEDA_VAL(VR,AV)
280 PR=INT(1*RND(1)+.4):AP=100*RND(1):_LEDA_POS(PR,AP)
290 _LED_REAL(I)
300 IF I<5 THEN _LEDPT_SAVE(I)
310 _LEDA_ON
320 PRINT #1,I,CH,CS,CV,CP,PT,PH,PS,PV,PP,PA,HR,AH,SR,AS,VR,AV,PR,AP
330 FOR X=0 TO 500 STEP 1:NEXT X
340 _LED_OFF
350 FOR X=0 TO 100 STEP 1:NEXT X
360 NEXT I
370 'LOAD TEST
380 FOR I=0 TO 4 STEP 1
390 _LEDPT_LOAD(I)
400 _LED_REAL(I)
410 NEXT I
420 'PAUSE TEST
430 _LED_REAL(200)
440 _LEDA_PAUSE(1)
450 _LED_REAL(210)
460 _LED_REAL(220)
470 CH=360*RND(1):_LEDC_HUE(CH)
480 CS=100*RND(1):_LEDC_SAT(CS)
490 CV=100*RND(1):_LEDC_VAL(CV)
500 _LED_DRAW
510 PRINT #1,930,CH,CS,CV,CP,PT,PH,PS,PV,PP,PA,HR,AH,SR,AS,VR,AV,PR,AP
520 _LED_REAL(230)
530 _LEDA_PAUSE(0)
540 _LED_REAL(240)
550 CLOSE #1
